<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/reset_pwdLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/layout_color"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/resetPasswordTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Reset Password"
            android:textColor="@color/appColor"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resentPasswordInfoTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:lineSpacingExtra="2sp"
            android:text="Forgot your password? Please enter your university email address for setting a new one."
            android:textSize="18sp" />

        <EditText
            android:id="@+id/emailET"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/email_envelope"
            android:drawablePadding="32dp"
            android:hint="Enter university email"
            android:paddingBottom="16dp" />

        <Button
            android:id="@+id/reset_pwdBTN"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:background="@drawable/toolbar_background"
            android:inputType="textCapCharacters"
            android:text="Reset password"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/errorMsgTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Email address is not valid! Please try again!"
            android:textColor="@color/red"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pwd_reset_doneLL"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/layout_color"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/resetPwdTV"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="Reset Password"
            android:textColor="@color/appColor"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailSentTV"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:lineSpacingExtra="2sp"
            android:text="Password reset email sent!"
            android:textColor="@color/ash"
            android:textSize="18sp" />

        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_margin="32dp"
            android:background="@color/appColor" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="@drawable/logo"
            android:gravity="center"
            android:textColor="@color/appColor"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/signInTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textColor="@color/appColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="or"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/signUpTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@color/appColor"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>